<!DOCTYPE html>
<html>
<%- include("partials/head.ejs") %>
  <body>
<%- include("partials/header.ejs") %> 
    <div class="pokemonDetail">
        <div id="image">               
            <img src="<%=pokedude.img %>"></div>
        <div id="detail">
            <form id="updatePokemon" action="/pokemon/<%= index %>?_method=PUT" method="post">
                <input type="text" name="name" placeholder="NAME" value="<%=pokedude.name%>"/><br />
                <div class="types">
                    <div><input type="text" name="type1" placeholder="TYPE" value="<%=pokedude.type[0]%>" /></div>
                    <div><input type="text" name="type2" placeholder="TYPE" value="<%=pokedude.type[1]%>" /></div>
                </div>
                <h4>Stats:</h4>
                <div class="stats">
                    <div><h5 id="hp">HP:</h5><input type="text" name="hp" placeholder="HP" value="<%= pokedude.stats.hp %> "/></div>
                    <div><h5 id="defense">DEFENSE:</h5><input type="text" name="defense" placeholder="DEFENSE" value="<%= pokedude.stats.defense %> "/></div>
                    <div><h5 id="attack">ATTACK:</h5> <input type="text" name="attack" placeholder="ATTACK" value="<%= pokedude.stats.attack %> "/></div>
                    <div><h5 id="speed">SPEED:</h5><input type="text" name="speed" placeholder="SPEED" value="<%= pokedude.stats.speed %> "/></div>
                </div>
            </form>
        </div>
        <div id="back">
                <a href="/pokemon/">
                <button>FULL INDEX</button>
                </a>
        </div>
        <div id="edit">
                <input type="submit" form="updatePokemon" value="UPDATE">
        </div>
        <div id="delete">
                <form action="/pokemon/<%=pokedude%>?_method=DELETE" method="post">
                <input type="submit" value="DELETE">
                </form>
        </div>

    </div>
</body>
</html>