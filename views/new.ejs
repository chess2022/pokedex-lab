<!DOCTYPE html>
<html>
<%- include("partials/head.ejs") %>
  <body>
<%- include("partials/header.ejs") %> 
    <div class="pokemonDetail">
        <div id="image"> 
                <img src="/static/newMon.jpg" id="newImage" name="newImage">
             </div>
        <div id="detail">
            <form id="createPokemon" action="<%= allMon.push() %>?_method=PUT" method="post">

                <input type="text" name="name" placeholder="NAME"/><br />
                <div class="types">
                    <div><input type="text" name="type1" placeholder="TYPE"/></div>
                    <div><input type="text" name="type2" placeholder="TYPE"/></div>
                </div>
                <h4>Stats:</h4>
                <div class="stats">
                    <div><h5 id="hp">HP:</h5><input type="text" name="hp" placeholder="HP" /></div>
                    <div><h5 id="defense">DEFENSE:</h5><input type="text" name="defense" placeholder="DEFENSE"/></div>
                    <div><h5 id="attack">ATTACK:</h5> <input type="text" name="attack" placeholder="ATTACK"/></div>
                    <div><h5 id="speed">SPEED:</h5><input type="text" name="speed" placeholder="SPEED"/></div>
                </div>
            </form>
        </div>
        <div id="back">
                <a href="/pokemon/">
                <button>FULL INDEX</button>
                </a>
        </div>
        <div id="edit">
                <input type="submit" form="createPokemon" value="CREATE">
        </div>
        <div id="delete">
                <input type="reset" form="createPokemon" value="RESET">
                </form>
        </div>

    </div>
</body>
</html>